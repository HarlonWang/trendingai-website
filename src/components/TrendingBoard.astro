---
import type { Locale, TrendingMessages } from "../i18n/types";

interface Props {
    locale: Locale;
    messages: TrendingMessages;
}

const { locale, messages } = Astro.props;

const config = {
    locale,
    summaryLang: locale === "zh-CN" ? "zh" : "en",
    days: 14,
    limit: 25,
    labels: messages,
};
---

<section class="wrap trending-page reveal" data-trending-board>
    <aside class="trending-sidebar">
        <h2>{messages.sidebarTitle}</h2>
        <p>{messages.sidebarHint}</p>
        <ul class="trending-date-list" data-date-list></ul>
    </aside>

    <section class="trending-content">
        <div class="trending-since-selector" data-since-selector>
            <button class="trending-since-button" data-since="daily">{messages.sinceDaily}</button>
            <button class="trending-since-button" data-since="weekly">{messages.sinceWeekly}</button>
            <button class="trending-since-button" data-since="monthly">{messages.sinceMonthly}</button>
        </div>
        <div class="trending-status" data-status></div>
        <section class="trending-repo-list" data-repo-list></section>
    </section>

    <script type="application/json" data-trending-config is:inline set:html={JSON.stringify(config)}></script>
</section>

<script>
    import "../scripts/trending/board";
</script>

<style is:global>
    [data-theme-ready] .trending-sidebar,
    [data-theme-ready] .trending-content,
    [data-theme-ready] .trending-repo-card,
    [data-theme-ready] .trending-summary,
    [data-theme-ready] .trending-date-item,
    [data-theme-ready] .trending-status,
    [data-theme-ready] .trending-since-button {
        transition: background-color 250ms ease, border-color 250ms ease, color 150ms ease, box-shadow 250ms ease;
    }

    .wrap.trending-page {
        margin-top: 16px;
        display: grid;
        grid-template-columns: minmax(240px, 272px) minmax(0, 1fr);
        gap: 16px;
        align-items: start;
    }

    .trending-sidebar,
    .trending-content {
        border-radius: 18px;
        border: 1px solid color-mix(in srgb, var(--md-sys-color-outline) 22%, transparent);
        background: color-mix(in srgb, var(--md-sys-color-surface-container) 92%, transparent);
        box-shadow: var(--shadow-ambient);
    }

    .trending-sidebar {
        padding: 18px 14px;
    }

    .trending-sidebar h2 {
        margin: 0;
        font-size: 1rem;
    }

    .trending-sidebar p {
        margin: 8px 0 0;
        color: var(--md-sys-color-on-surface-variant);
        font-size: 0.85rem;
        line-height: 1.45;
    }

    .trending-date-list {
        list-style: none;
        margin: 14px 0 0;
        padding: 0;
        display: grid;
        gap: 9px;
        max-height: 584px;
        overflow-y: auto;
    }

    .trending-date-item {
        border-radius: 12px;
        border: 1px solid color-mix(in srgb, var(--md-sys-color-outline) 20%, transparent);
        background: color-mix(in srgb, var(--md-sys-color-surface) 84%, transparent);
        padding: 9px;
    }

    .trending-date-label {
        font-size: 0.82rem;
        font-weight: 700;
    }

    .trending-batch-group {
        display: flex;
        gap: 8px;
        margin-top: 8px;
    }

    .trending-batch-button {
        flex: 1 1 0;
        border: 1px solid color-mix(in srgb, var(--md-sys-color-outline) 32%, transparent);
        border-radius: 9px;
        background: transparent;
        color: var(--md-sys-color-on-surface-variant);
        font-size: 0.78rem;
        font-weight: 700;
        letter-spacing: 0.01em;
        padding: 10px 8px;
        cursor: pointer;
        transition: border-color 180ms ease, background-color 180ms ease, color 180ms ease;
    }

    .trending-batch-button.is-selected {
        border-color: color-mix(in srgb, var(--md-sys-color-primary) 52%, transparent);
        background: color-mix(in srgb, var(--md-sys-color-primary-container) 82%, transparent);
        color: var(--md-sys-color-on-primary-container);
    }

    .trending-batch-button.is-empty {
        opacity: 0.58;
    }

    .trending-batch-button.is-available {
        border-color: color-mix(in srgb, var(--md-sys-color-primary) 42%, transparent);
    }

    .trending-content {
        padding: 18px;
    }

    .trending-since-selector {
        display: flex;
        gap: 6px;
        padding-bottom: 14px;
        border-bottom: 1px solid color-mix(in srgb, var(--md-sys-color-outline) 14%, transparent);
    }

    .trending-since-button {
        flex: 1 1 0;
        border: 1px solid color-mix(in srgb, var(--md-sys-color-outline) 28%, transparent);
        border-radius: 10px;
        background: transparent;
        color: var(--md-sys-color-on-surface-variant);
        font-size: 0.85rem;
        font-weight: 700;
        padding: 8px 12px;
        cursor: pointer;
        transition: border-color 180ms ease, background-color 180ms ease, color 180ms ease;
    }

    .trending-since-button.is-selected {
        border-color: color-mix(in srgb, var(--md-sys-color-primary) 52%, transparent);
        background: color-mix(in srgb, var(--md-sys-color-primary-container) 82%, transparent);
        color: var(--md-sys-color-on-primary-container);
    }

    .trending-since-button:not(.is-selected):hover {
        background: color-mix(in srgb, var(--md-sys-color-primary-container) 48%, transparent);
        color: var(--md-sys-color-on-primary-container);
    }

    .trending-status {
        margin-top: 14px;
        border-radius: 12px;
        border: 1px solid color-mix(in srgb, var(--md-sys-color-outline) 24%, transparent);
        padding: 10px 12px;
        display: none;
        align-items: center;
        justify-content: space-between;
        gap: 10px;
        background: color-mix(in srgb, var(--md-sys-color-surface) 86%, transparent);
    }

    .trending-status.is-visible {
        display: flex;
    }

    .trending-status p {
        margin: 0;
        font-size: 0.88rem;
    }

    .trending-status.is-loading {
        color: var(--md-sys-color-on-surface-variant);
    }

    .trending-status.is-empty {
        border-color: color-mix(in srgb, var(--md-sys-color-outline) 28%, transparent);
    }

    .trending-status.is-error {
        border-color: color-mix(in srgb, #b3261e 40%, transparent);
        color: #b3261e;
    }

    .trending-retry-button {
        border: 1px solid color-mix(in srgb, var(--md-sys-color-outline) 34%, transparent);
        background: transparent;
        color: inherit;
        border-radius: 8px;
        font-size: 0.82rem;
        font-weight: 700;
        padding: 5px 10px;
        cursor: pointer;
    }

    .trending-repo-list {
        margin-top: 14px;
        display: grid;
        gap: 12px;
    }

    .trending-repo-card {
        border-radius: 16px;
        border: 1px solid color-mix(in srgb, var(--md-sys-color-outline) 22%, transparent);
        background: color-mix(in srgb, var(--md-sys-color-surface) 92%, transparent);
        padding: 14px;
    }

    .trending-repo-head {
        display: flex;
        align-items: center;
        gap: 10px;
    }

    .trending-rank {
        display: inline-flex;
        align-items: center;
        justify-content: center;
        border-radius: 999px;
        padding: 2px 10px;
        background: color-mix(in srgb, var(--md-sys-color-primary-container) 86%, transparent);
        color: var(--md-sys-color-on-primary-container);
        font-size: 0.78rem;
        font-weight: 800;
        letter-spacing: 0.01em;
    }

    .trending-repo-link {
        font-size: 1rem;
        font-weight: 800;
        text-decoration: underline;
        text-decoration-color: transparent;
        text-underline-offset: 3px;
        transition: text-decoration-color 180ms ease, color 180ms ease;
    }

    .trending-repo-link:hover {
        color: var(--md-sys-color-primary);
        text-decoration-color: currentcolor;
    }

    .trending-repo-description {
        margin: 10px 0 0;
        color: var(--md-sys-color-on-surface-variant);
        font-size: 0.9rem;
    }

    .trending-summary {
        margin-top: 12px;
        border-radius: 12px;
        border: 1px solid color-mix(in srgb, var(--md-sys-color-primary) 26%, transparent);
        background: color-mix(in srgb, var(--md-sys-color-primary-container) 78%, transparent);
        padding: 12px;
    }

    .trending-summary h3 {
        margin: 0;
        font-size: 0.86rem;
        color: var(--md-sys-color-on-primary-container);
    }

    .trending-summary p {
        margin: 7px 0 0;
        color: var(--md-sys-color-on-primary-container);
        font-size: 0.92rem;
        line-height: 1.58;
    }

    .trending-meta-line {
        margin: 10px 0 0;
        display: flex;
        flex-wrap: wrap;
        align-items: center;
        gap: 8px;
        color: var(--md-sys-color-on-surface-variant);
        font-size: 0.82rem;
        line-height: 1.45;
    }

    .trending-meta-item {
        display: inline-flex;
        align-items: center;
        gap: 6px;
    }

    .trending-meta-separator {
        color: color-mix(in srgb, var(--md-sys-color-outline) 86%, var(--md-sys-color-on-surface-variant));
    }

    .trending-lang-dot {
        width: 8px;
        height: 8px;
        border-radius: 999px;
        flex: 0 0 8px;
        background: var(--lang-color, #9a8fb3);
    }

    .trending-empty-card {
        border-radius: 14px;
        border: 1px solid color-mix(in srgb, var(--md-sys-color-outline) 24%, transparent);
        background: color-mix(in srgb, var(--md-sys-color-surface) 86%, transparent);
        padding: 16px;
        font-size: 0.9rem;
        color: var(--md-sys-color-on-surface-variant);
    }

    /* 响应式：移动端 */
    @media (max-width: 860px) {
        .wrap.trending-page {
            grid-template-columns: 1fr;
        }

        .trending-sidebar {
            position: sticky;
            top: 0;
            z-index: 10;
            padding: 12px 14px;
            border-radius: 0 0 18px 18px;
            overflow: hidden;
        }

        .trending-sidebar h2,
        .trending-sidebar > p {
            display: none;
        }

        .trending-date-list {
            display: flex;
            flex-direction: row;
            overflow-x: auto;
            overflow-y: hidden;
            scrollbar-width: none;
            -webkit-overflow-scrolling: touch;
            max-height: none;
            margin-top: 0;
            gap: 8px;
            padding-bottom: 2px;
        }

        .trending-date-list::-webkit-scrollbar {
            display: none;
        }

        .trending-date-item {
            flex: 0 0 auto;
        }

        .trending-batch-button {
            padding: 12px 10px;
        }
    }
</style>
