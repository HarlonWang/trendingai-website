---
import LanguageSwitch from "./LanguageSwitch.astro";
import type { FeatureItem } from "../i18n/types";

const DOWNLOAD_URL = "https://download.trendingai.cn/TrendingAI-latest.apk";

interface Props {
    homeHref: string;
    title: string;
    subtitle: string;
    features: FeatureItem[];
    previewSrc: string;
    previewAlt: string;
    primaryCta: string;
    secondaryCta: string;
    githubLabel: string;
    downloadLabel: string;
    languageLabel: string;
    languageHref: string;
}

const {
    homeHref,
    title,
    subtitle,
    features,
    previewSrc,
    previewAlt,
    primaryCta,
    secondaryCta,
    githubLabel,
    downloadLabel,
    languageLabel,
    languageHref
} = Astro.props;
---

<header class="hero wrap">
    <nav class="topbar reveal">
        <a class="brand" href={homeHref}>
            <img class="brand-logo" src="/ic_launcher_round.webp" alt="Trending AI Logo" loading="eager" />
            <span class="brand-text">Trending AI</span>
        </a>
        <div class="topbar-actions">
            <a class="top-link nav-cta" href={DOWNLOAD_URL} target="_blank" rel="noreferrer">{downloadLabel}</a>
            <a class="top-link nav-text" href="https://github.com/HarlonWang/TrendingAI" target="_blank" rel="noreferrer">{githubLabel}</a>
            <LanguageSwitch href={languageHref} label={languageLabel} />
        </div>
    </nav>

    <div class="hero-main reveal">
        <div class="hero-content">
            <h1>{title}</h1>
            <p class="hero-subtitle">{subtitle}</p>
            <div class="hero-actions">
                <a class="btn btn-primary" href={DOWNLOAD_URL} target="_blank" rel="noreferrer">{primaryCta}</a>
                <a class="btn btn-ghost" href="https://github.com/HarlonWang/TrendingAI" target="_blank" rel="noreferrer">{secondaryCta}</a>
            </div>

            <section class="hero-feature-block">
                <div class="hero-feature-list">
                    {features.map((item) => (
                        <article class="hero-feature-item">
                            <h3>{item.title}</h3>
                            <p>{item.description}</p>
                        </article>
                    ))}
                </div>
            </section>
        </div>

        <div class="hero-visual">
            <div class="hero-image-wrap">
                <img src={previewSrc} alt={previewAlt} class="hero-image" loading="eager" />
            </div>
        </div>
    </div>
</header>
