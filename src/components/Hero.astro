---
import type { FeatureItem } from "../i18n/types";

const DOWNLOAD_URL = "https://download.trendingai.cn/TrendingAI-latest.apk";

interface Props {
    title: string;
    subtitle: string;
    features: FeatureItem[];
    previewSrc: string;
    previewAlt: string;
    primaryCta: string;
    secondaryCta: string;
}

const {
    title,
    subtitle,
    features,
    previewSrc,
    previewAlt,
    primaryCta,
    secondaryCta
} = Astro.props;
---

<div class="hero-main reveal">
    <div class="hero-content">
        <h1>{title}</h1>
        <p class="hero-subtitle">{subtitle}</p>
        <div class="hero-actions">
            <a class="btn btn-primary" href={DOWNLOAD_URL} target="_blank" rel="noreferrer">{primaryCta}</a>
            <a class="btn btn-ghost" href="https://github.com/HarlonWang/TrendingAI" target="_blank" rel="noreferrer">{secondaryCta}</a>
        </div>

        <section class="hero-feature-block">
            <div class="hero-feature-list">
                {features.map((item) => (
                    <article class="hero-feature-item">
                        <h3>{item.title}</h3>
                        <p>{item.description}</p>
                    </article>
                ))}
            </div>
        </section>
    </div>

    <div class="hero-visual">
        <div class="hero-image-wrap">
            <img src={previewSrc} alt={previewAlt} class="hero-image" loading="eager" />
        </div>
    </div>
</div>
