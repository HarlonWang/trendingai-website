---
import DownloadCard from "../components/DownloadCard.astro";
import Features from "../components/Features.astro";
import Footer from "../components/Footer.astro";
import Hero from "../components/Hero.astro";
import Preview from "../components/Preview.astro";
import { getMessages, getPathByLocale, getSwitchLocale } from "../lib/i18n";
import type { Locale } from "../i18n/types";
import BaseLayout from "../layouts/BaseLayout.astro";

const locale: Locale = "zh-CN";
const messages = getMessages(locale);
const homePath = getPathByLocale(locale);
const switchLocale = getSwitchLocale(locale);
const switchPath = getPathByLocale(switchLocale);
---

<BaseLayout
    locale={locale}
    title={messages.meta.title}
    description={messages.meta.description}
    canonicalPath="/"
>
    <Hero
        homeHref={homePath}
        badge={messages.hero.badge}
        title={messages.hero.title}
        subtitle={messages.hero.subtitle}
        primaryCta={messages.hero.primaryCta}
        secondaryCta={messages.hero.secondaryCta}
        githubLabel={messages.nav.github}
        downloadLabel={messages.nav.download}
        languageLabel={messages.nav.languageLabel}
        languageHref={switchPath}
    />
    <Features title={messages.features.title} items={messages.features.items} />
    <Preview
        title={messages.preview.title}
        description={messages.preview.description}
        alt={messages.preview.alt}
    />
    <DownloadCard locale={locale} messages={messages.download} />
    <Footer
        copyright={messages.footer.copyright}
        license={messages.footer.license}
        changelog={messages.footer.changelog}
        repository={messages.footer.repository}
    />
</BaseLayout>
