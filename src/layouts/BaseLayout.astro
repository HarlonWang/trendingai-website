---
import "../styles/global.css";
import type { Locale } from "../i18n/types";

interface Props {
    locale: Locale;
    title: string;
    description: string;
    canonicalPath: string;
}

const { locale, title, description, canonicalPath } = Astro.props;
const siteUrl = "https://trendingai.cn";
const canonical = `${siteUrl}${canonicalPath}`;
const enPath = canonicalPath.startsWith("/zh/") ? (canonicalPath.slice(3) || "/") : canonicalPath;
const zhPath = canonicalPath.startsWith("/zh/") ? canonicalPath : (canonicalPath === "/" ? "/zh/" : `/zh${canonicalPath}`);
const zhUrl = `${siteUrl}${zhPath}`;
const enUrl = `${siteUrl}${enPath}`;
const ogImage = `${siteUrl}/android_screenshot.png`;
---

<!doctype html>
<html lang={locale === "zh-CN" ? "zh-CN" : "en"}>
    <head>
        <script is:inline>
            (function() {
                const storageKey = "preferred-locale";
                const savedLocale = localStorage.getItem(storageKey);
                const browserLocale = navigator.language.toLowerCase().startsWith("zh") ? "zh-CN" : "en-US";
                const finalLocale = savedLocale || browserLocale;
                const currentPath = window.location.pathname;
                const currentSearch = window.location.search;
                const currentHash = window.location.hash;
                const isZhPath = currentPath === "/zh" || currentPath.startsWith("/zh/");

                if (finalLocale === "zh-CN" && !isZhPath) {
                    const normalizedPath = currentPath.startsWith("/") ? currentPath : `/${currentPath}`;
                    const targetPath = normalizedPath === "/" ? "/zh/" : `/zh${normalizedPath}`;
                    window.location.replace(`${targetPath}${currentSearch}${currentHash}`);
                    return;
                }

                if (finalLocale === "en-US" && isZhPath) {
                    const strippedPath = currentPath === "/zh" ? "/" : currentPath.replace(/^\/zh/, "") || "/";
                    const targetPath = strippedPath.startsWith("/") ? strippedPath : `/${strippedPath}`;
                    window.location.replace(`${targetPath}${currentSearch}${currentHash}`);
                }
            })();
        </script>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1" />
        <meta name="description" content={description} />
        <link rel="icon" type="image/png" sizes="32x32" href="/favicon-32.png" />
        <link rel="icon" type="image/webp" href="/ic_launcher_round.webp" />
        <link rel="apple-touch-icon" sizes="180x180" href="/apple-touch-icon.png" />
        <link rel="canonical" href={canonical} />
        <link rel="alternate" hreflang="zh-CN" href={zhUrl} />
        <link rel="alternate" hreflang="en" href={enUrl} />
        <link rel="alternate" hreflang="x-default" href={enUrl} />
        <meta property="og:type" content="website" />
        <meta property="og:title" content={title} />
        <meta property="og:description" content={description} />
        <meta property="og:url" content={canonical} />
        <meta property="og:image" content={ogImage} />
        <meta name="twitter:card" content="summary_large_image" />
        <meta name="twitter:title" content={title} />
        <meta name="twitter:description" content={description} />
        <meta name="twitter:image" content={ogImage} />
        <link rel="preconnect" href="https://fonts.googleapis.com" />
        <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin="anonymous" />
        <link href="https://fonts.googleapis.com/css2?family=Noto+Sans+SC:wght@400;500;700&family=Plus+Jakarta+Sans:wght@500;700;800&display=swap" rel="stylesheet" />
        <title>{title}</title>
    </head>
    <body>
        <slot />
        <script is:inline>
            const observer = new IntersectionObserver((entries) => {
                for (const entry of entries) {
                    if (entry.isIntersecting) {
                        entry.target.classList.add("is-visible");
                        observer.unobserve(entry.target);
                    }
                }
            }, {
                threshold: 0.15
            });

            document.querySelectorAll(".reveal").forEach((element) => {
                observer.observe(element);
            });
        </script>
    </body>
</html>
